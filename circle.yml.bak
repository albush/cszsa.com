version: 2
jobs:
  production_build:
    docker:
      - image: cibuilds/hugo:0.27
    working_directory: ~/project
    steps:
      - checkout
      - run:
          name: "Run Hugo"
          command: HUGO_ENV=production hugo -v -s ~/project
      - persist_to_workspace:
          root: ~/project
          paths:
            - public
  staging_build:
    docker:
      - image: cibuilds/hugo:0.27
    working_directory: ~/project
    steps:
      - checkout
      - run:
          name: "Run Hugo"
          command: HUGO_ENV=staging hugo -v -s ~/project
      - persist_to_workspace:
          root: ~/project
          paths:
            - public
  staging_deploy:
    docker:
      - image: cibuilds/aws
    steps:
      - attach_workspace:
          at: ~/project
      - run:
          name: "Upload to Staging"
          command: aws s3 sync ~/project/public --region $REGION s3://${STAGING_BUCKET}/ --delete
  prod_deploy:
    docker:
      - image: cibuilds/aws
    steps:
      - attach_workspace:
          at: ~/project
      - run:
          name: "Upload to Production"
          command: aws s3 sync ~/project/public --region $REGION s3://${BUCKET}/ --delete
      - run:
          name: "Invalidate CloudFront"
          command: aws cloudfront create-invalidation --distribution-id $DISTRIBUTION_ID --paths /index.html

workflows:
  version: 2
  build_and_deploy:
    jobs:
      - staging_build:
          filters:
            branches:
              only: staging
      - production_build:
          filters:
            branches:
              only: production
      - staging_deploy:
          requires:
            - staging_build
          filters:
            branches:
              only: staging
      - prod_deploy:
          requires:
            - production_build
          filters:
            branches:
              only: production
